@model Examenes.ViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Delete";
        int iteration = 1;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientData)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientData)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShippingAddressData)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShippingAddressData)
        </dd>
        <dt class="col-sm-2 mt-4 h3">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        @if (Model.Products.Any())
        {

            foreach (var item in Model.Products)
            {
                <dd class="col-sm-10">

                </dd>
                <dd class="col-sm-10">
                    @($"{iteration}. {item.Name} - {item.Description}")
                </dd>
                iteration++;
            }
        }
        else
        {
            <dd class="col-sm-10">
                No products
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
