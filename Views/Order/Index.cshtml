@model List<Examenes.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ShippingAddressData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ProductsQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ClientData)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippingAddressData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductsQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientData)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
