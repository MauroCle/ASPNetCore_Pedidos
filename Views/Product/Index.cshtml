@model Examenes.ViewModels.ProductIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de productos</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear</a>
</p>
<div class="row">
    <form method="get" asp-action="Index" asp-controller="Product">
        <div class="form-group mx-sm-3 mb-2 row" style="max-width:600px">
            <input class="form-control " asp-for="NameFilter" style="max-width:50%">
            <button type="submit" class="btn btn-primary ml-3" style="max-width:15%; margin-left: 10px;">Buscar</button>
        </div>

    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td align="right">
                    <div class="row justify-content-end flex-nowrap">
                        <div class="col-4" style="max-width:100px">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary ">Editar</a>
                        </div>
                        <div class="col-4" style="max-width:100px">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning ">Detalles</a>
                        </div>
                        <div class="col-4" style="max-width:100px">
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
