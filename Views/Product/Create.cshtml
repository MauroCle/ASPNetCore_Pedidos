@model Examenes.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo producto</h1>
<hr />
@if (ViewData.ModelState.Any(m => m.Value.Errors.Any()))
{
    <div class="alert alert-danger" role="alert">

        @foreach (var key in ViewData.ModelState.Keys)
        {
            foreach (var error in ViewData.ModelState[key].Errors)
            {
                @Html.Raw(@error.ErrorMessage)
            }
        }

    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>  *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-around">
                <input type="submit" value="Guardar" class="btn btn-success mt-3 col-4" />
                <a type="button" asp-controller="Product" asp-action="Index" class="btn btn-info mt-3 col-4">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
